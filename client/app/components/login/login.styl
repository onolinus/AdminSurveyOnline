body
  background: #d2d6de;

.panel
  width: 400px;
  margin: 15% auto;
  background: #fff;
  border: 0!important;
  color: #666;

  .panel-head
    height: 70px;
    margin-top: -10px;

  .form-control, .input-group-addon
    border-radius: 0;

  .panel-head
    background:#1976D2;
    box-shadow: 0 2px 5px 0 rgba(0,0,0,.16),0 2px 10px 0 rgba(0,0,0,.12);
    transition: box-shadow .25s;

  .app-logo .logo
    width:75px;

  h1
    font-size:30px;
    text-align: left;
    padding-left: 100px;
    color: #fff;
    padding-top: 15px;

  .btn
    width: 100%;
