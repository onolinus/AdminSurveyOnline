.questions
    margin-top:10px;
    position: relative;
    background: #fff;
    border-radius: 2px;
    box-shadow: 0 2px 5px 0 rgba(0,0,0,.16),0 2px 10px 0 rgba(0,0,0,.12);

    .question-content
      border-radius: 0 0 2px 2px;

      .question-body
        padding: 1rem 2rem;
        margin: 1rem 0;

        p, .row
          margin:0;

        p
          margin-bottom:10px;
          font-size: 14px;
          line-height: 24px;

        .row
          margin-bottom:10px;

          .input-field
          p
            margin-bottom:0;

  .question-tool
    display: block;
    position: relative;
    height: 50px;

    i
      margin-left:5px;
      margin-right:5px;
      font-size:11px;

